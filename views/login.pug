extends layout

block content
    link(href='/css/extends/login.css', rel='stylesheet')
    body
    .navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      .container
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='index') Database-Project
        .collapse.navbar-collapse
          ul.nav.navbar-nav
            li.active
              a(href='#') Site
            li
              a(href='about') About
            li
              a#loginform(href='#') Login
            .login
              .arrow-up
                .formholder
                  .randompad
                    fieldset
                      h3 Login
                      br
                      | StudentID
                      input(type='username',placeholder='10 digits')
                      | Password
                      input(type='password',placeholder='Reg-CU Password')
                      br
                      .checkbox
                          label
                            input(type='checkbox')
                            |  checking this box mean agree to the agreement and privacy and cookies statement.
                      input(type='submit', value='Login')
    .container
      br
      br
      .row
        .col-sm-2
          nav.navbar.navbar-default.sidebar(role='navigation')
            .container-fluid
              ul.nav.navbar-nav
                li
                  a(href='#')
                    | Home &nbsp; 
                    span.pull-right.hidden-xs.showopacity.glyphicon.glyphicon-home(style='font-size:16px;')
                li
                  a(href='account')
                    | Account &nbsp;
                    span.pull-right.hidden-xs.showopacity.glyphicon.glyphicon-user(style='font-size:16px;')
                li
                  a(href='#')
                    | Menu &nbsp;
                    span.pull-right.hidden-xs.showopacity.glyphicon.glyphicon-th-list(style='font-size:16px;')
                li
                  a(href='#')
                    | Search &nbsp;
                    span.pull-right.hidden-xs.showopacity.glyphicon.glyphicon-search(style='font-size:16px;')
                li
                  a(href='#')
                    | Logout &nbsp;
                    span.pull-right.hidden-xs.showopacity.glyphicon.glyphicon-log-out(style='font-size:16px;')
        .col-sm-10
          .container-fluid
            
                    
    script(src='js/login.js')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
    script(src="js/bootstrap.min.js")

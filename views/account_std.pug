                    span.pull-right.hidden-xs.showopacity.glyphicon.glyphicon-list-alt(style='font-size:16px;')
                li
                  a(href='activity_std')
                    | Activities &nbsp;
                    span.pull-right.hidden-xs.showopacity.glyphicon.glyphicon-time(style='font-size:16px;')
                li
                  a(href='intern_std')
                    | Internship &nbsp;
                    span.pull-right.hidden-xs.showopacity.glyphicon.glyphicon-usd(style='font-size:16px;')
                li
                  a(href='search_std')
                    | Search &nbsp;
                    span.pull-right.hidden-xs.showopacity.glyphicon.glyphicon-search(style='font-size:16px;')
                li
                  a(href='index')
                    | Logout &nbsp;
                    span.pull-right.hidden-xs.showopacity.glyphicon.glyphicon-log-out(style='font-size:16px;')
        .col-sm-10
          .container-fluid
            h1 Account Manager &nbsp; &nbsp;
            button.btn.btn-lg.btn-primary(type='button') Edit

extends layout

block content
    link(href='/css/extends/profile.css', rel='stylesheet')
    body
    .navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      .row
        .col-sm-6
          .col-sm-1
          .navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='index') Database-Project
          .collapse.navbar-collapse
            ul.nav.navbar-nav
              li.active
                a(href='#') Site
              li
                a(href='about') About
        .col-sm-5
        .col-sm-1
            .collapse.navbar-collapse
              ul.nav.navbar-nav
                li
                  a(href='#') #{user_val}
    .container
      br
      br
      .row
        .col-sm-2
          nav.navbar.navbar-default.sidebar(role='navigation')
            .container-fluid
              ul.nav.navbar-nav
                li
                  a(href='index_prof')
                    | Home &nbsp; 
                    span.pull-right.hidden-xs.showopacity.glyphicon.glyphicon-home(style='font-size:16px;')
                li
                  a(href='#')
                    font(class="text-primary") | Profile &nbsp;
                    span.pull-right.hidden-xs.showopacity.glyphicon.glyphicon-user(style='font-size:16px;' class="text-primary")
                li
                  a(href='course_prof')
                    | Courses &nbsp;
                    span.pull-right.hidden-xs.showopacity.glyphicon.glyphicon-pencil(style='font-size:16px;')
                li
                  a(href='advisee_prof')
                    | Advisees &nbsp;
                    span.pull-right.hidden-xs.showopacity.glyphicon.glyphicon-bullhorn(style='font-size:16px;')
                li
                  a(href='project_prof')
                    | Projects &nbsp;
                    span.pull-right.hidden-xs.showopacity.glyphicon.glyphicon-file(style='font-size:16px;')
                li
                  a(href='download_prof')
                    | Download &nbsp;
                    span.pull-right.hidden-xs.showopacity.glyphicon.glyphicon-cloud-download(style='font-size:16px;')
                li
                  a(href='/logout')
                    | Logout &nbsp;
                    span.pull-right.hidden-xs.showopacity.glyphicon.glyphicon-log-out(style='font-size:16px;')
        .col-sm-10
          .container-fluid
            h1 Profile Manager &nbsp; &nbsp;
            button.btn.btn-lg.btn-primary(type='button') Edit
            img.responsive-img(src="images/brown.png" align="right" style='max-height:150px;' alt="face")
            br
            | You can manage your profile here.
            br
            br
            br
            .row
              .col-lg-1
                h4 Prefix
                br 
                button.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false' disabled)
                  | Mr. &nbsp;
                  span.caret
                ul.dropdown-menu
                  li
                    a(href='#') Mr.
                  li
                    a(href='#') Ms.
              .col-lg-3
                h4 First name  
                input.form-control(type="text" value="Brown" disabled)
              .col-lg-3
                h4 Last name  
                input.form-control(type="text" value="Bigbear" disabled)
              .col-lg-2
                h4 Birth Date
                input.form-control(type="date" value="14/03/15" disabled)
            br
            .row
              .col-lg-9
                h4 Address
                input.form-control(type="text" value="1 Empire tower, 41st floor, River wing west, South Sathorn road, Yannawa, Sathorn, Bangkok 10120" disabled)
            br
            .row
              .col-lg-3
                h4 Email Address
                input.form-control(type="text" value="brown@line.me" disabled)
              .col-lg-3
                h4 Phone
                input.form-control(type="text" value="089-999-9999" disabled)
            br
            br
            .row
              .col-sm-7
                |
              .col-sm-3
                button.btn.btn-md.btn-success(type='save_button' disabled ) Save 
                | &nbsp;
                button.btn.btn-md.btn-danger(type='button' disabled) Cancel
                
      script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
      script(src="js/bootstrap.min.js")

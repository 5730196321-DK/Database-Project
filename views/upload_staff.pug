extends layout

block content
    link(href='/css/extends/starter-template.css', rel='stylesheet')
    link(href='/css/extends/upload.css', rel='stylesheet')
    body
    .navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      .row
        .col-sm-6
          .col-sm-1
          .navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='index') Database-Project
          .collapse.navbar-collapse
            ul.nav.navbar-nav
              li.active
                a(href='#') Site
              li
                a(href='about') About
        .col-sm-4
        .col-sm-2
          .collapse.navbar-collapse
            ul.nav.navbar-nav
              li
                a(href='#') &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; STAFF : NAN
    .container
      br
      br
      .row
        .col-sm-2
          nav.navbar.navbar-default.sidebar(role='navigation')
            .container-fluid
              ul.nav.navbar-nav
                li
                  a(href='index_staff')
                    | Home &nbsp; 
                    span.pull-right.hidden-xs.showopacity.glyphicon.glyphicon-home(style='font-size:16px;')
                li
                  a(href='profile_staff')
                    | Profile &nbsp;
                    span.pull-right.hidden-xs.showopacity.glyphicon.glyphicon-user(style='font-size:16px;')
                li
                  a(href='#')
                    font(class="text-primary") | Upload &nbsp;
                    span.pull-right.hidden-xs.showopacity.glyphicon.glyphicon-cloud-upload(style='font-size:16px;' class="text-primary")
                li
                  a(href='download_staff')
                    | Download &nbsp;
                    span.pull-right.hidden-xs.showopacity.glyphicon.glyphicon-cloud-download(style='font-size:16px;')
                li
                  a(href='monitor_staff')
                    | Monitor &nbsp;
                    span.pull-right.hidden-xs.showopacity.glyphicon.glyphicon-stats(style='font-size:16px;')
                li
                  a(href='search_staff')
                    | Search &nbsp;
                    span.pull-right.hidden-xs.showopacity.glyphicon.glyphicon-search(style='font-size:16px;')
                li
                  a(href='index')
                    | Logout &nbsp;
                    span.pull-right.hidden-xs.showopacity.glyphicon.glyphicon-log-out(style='font-size:16px;')
        .col-sm-10
          .container-fluid
            h1 Upload Helper
            br
            br
            | You can manage files in the system here.
            br
            br
            h3 Document Upload
            .row
              .col-sm-1
              .col-sm-4
                h4 Document Name
                input.form-control(type="text" placeholder="Document Name")
              .col-sm-2
                h4 Date
                input.form-control(type="date" value="18/04/17")
              .col-sm-1
                br
                br
                span.btn.btn-info.btn-file
                  | Browse 
                  input(type='file')
              .col-sm-1
                br
                br
                button.btn.btn-md.btn-success(type='button') Save
            .row
              .col-sm-7
              .col-sm-2
                .checkbox
                  label
                    input(type='checkbox')
                    |  Publish Now
            br
            h3 Database Upload
            .row
              .col-sm-1
              .col-sm-4
                h4 Insert Into
                button.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
                  | Database Name &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                  span.caret
                ul.dropdown-menu
                  li
                    a(href='#') Student
                  li
                    a(href='#') Professor
                  li
                    a(href='#') Staff
              .col-sm-1
                br
                br
                span.btn.btn-info.btn-file
                  | Browse 
                  input(type='file')
              .col-sm-1
                br
                br
                button.btn.btn-md.btn-success(type='button') Save

    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
    script(src="js/bootstrap.min.js")
